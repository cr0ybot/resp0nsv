{
	"name": "resp0nsv",
	"version": "1.0.1",
	"description": "Responsive design view for Chrome.",

	"icons": {
		"16": "img/logo16.png",
		"48": "img/logo48.png",
		"128": "img/logo128.png"
	},

	"permissions": [ "tabs", "storage", "http://*/*", "https://*/*", "file://*" ],

	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; img-src *; object-src 'self'",

	"background": {
		"scripts": ["js/jquery-1.11.1.min.js", "background.js"]
	},

	"browser_action": {
		"default_icon": {
			"19": "img/icon19.png",
			"38": "img/icon38.png"
		},
		"default_title": "resp0nsv"
	},

	"options_page": "options.html",

	"minimum_chrome_version": "18",

	"update_url": "http://clients2.google.com/service/update2/crx",
	"manifest_version": 2
}